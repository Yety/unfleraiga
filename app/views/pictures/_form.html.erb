<%= form_for @picture, :html => {:multipart => true} do |f| %>
  <% if @picture.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@picture.errors.count, "error") %> prohibited this picture from being saved:</h2>

      <ul>
      <% @picture.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :text_body %><br />
    <%= f.text_area :text_body %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br />
    <%= f.number_field :user_id %>
  </div>
  <div class="field">
    <%= f.label :album_id %><br />
    <%= f.number_field :album_id %>
  </div>
  <%= f.hidden_field :redirect_to_album_id, :name => "redirect", :value => @redirect_back_to_album_id %>
  <!-- Paperclip-Stuff -->
<!-- <%= form_for @picture, :url => @picture_path, :html => { :multipart => true } do |form| %> -->
  <%= form.file_field :picture_attachment %>
<!-- <% end %> -->
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
